name: Go Check

on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]

jobs:
  build:
    name: Build
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v3

    - name: Set up Go ${{ matrix.go }}
      uses: actions/setup-go@v3
      with:
        go-version: ${{ matrix.go }}

    - name: Deps
      run: go mod tidy && go mod download
      
    - name: Vet
      run: go vet ./...

    - name: Test
      run: go test ./...

    - name: Build
      run: go build -v ./...